{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "RestServiceSettings": {
    "ApiProtocol": "",
    "CoreApiDomain": "",
    "CatalogApiDomain": ""
  },
  "JwtSettings": {
    "ValidAudience": "account",
    "ValidIssuer": "e-deals",
    "Secret": "",
    "Expiration": "1"
  },
  "RedisSettings": {
    "RedisConnection": "localhost:6379"
  }
}
